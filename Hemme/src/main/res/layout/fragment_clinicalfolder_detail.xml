<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.povodev.hemme.android.activity.clinicalFolder.ClinicalFolderDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_shadow_layout"
        android:orientation="vertical">

    <TextView
        android:id="@+id/clinicalfolder_title_therapy"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clinicalfolder_title_therapy"
        android:padding="8dp"
        android:fontFamily="sans-serif-regular"
        android:textIsSelectable="true"/>

    <TextView
        android:id="@+id/clinicalfolder_therapy"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginLeft="8dp"
        android:fontFamily="sans-serif-light"
        android:textIsSelectable="true"/>

    <TextView
        android:id="@+id/clinicalfolder_title_note"
        style="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clinicalfolder_title_note"
        android:padding="8dp"
        android:fontFamily="sans-serif-regular"
        android:textIsSelectable="true"/>

    <TextView
        android:id="@+id/clinicalfolder_note"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginLeft="8dp"
        android:fontFamily="sans-serif-light"
        android:textIsSelectable="true"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/ombra"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/clinicalfolder_author"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_alignParentLeft="true"
            android:fontFamily="sans-serif-regular"
            android:textIsSelectable="true"/>

        <TextView
            android:id="@+id/clinicalfolder_date"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_alignParentRight="true"
            android:fontFamily="sans-serif-regular"
            android:textIsSelectable="true"/>

    </RelativeLayout>
    </LinearLayout>

</ScrollView>