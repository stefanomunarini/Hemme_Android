<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.povodev.hemme.android" >

    <!-- PER PRENDERE L'IMEI NECESSARIO PER REGISTRARE I DISPOSITIVI-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".activity.Home_Activity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.povodev.hemme.android.ClinicalEventListActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="com.povodev.hemme.android.ClinicalEventDetailActivity"
            android:label="@string/title_clinicalevent_detail"
            android:parentActivityName="com.povodev.hemme.android.ClinicalEventListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.povodev.hemme.android.ClinicalEventListActivity" />
        </activity>

        <activity
            android:name=".activity.Login_Activity"
            android:parentActivityName="com.povodev.hemme.android.activity.Home_Activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.povodev.hemme.android.activity.Home_Activity" />
        </activity>

        <activity
            android:name=".activity.Registration_Activity"
            android:parentActivityName="com.povodev.hemme.android.activity.Home_Activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.povodev.hemme.android.activity.Home_Activity" />
        </activity>

    </application>

</manifest>
